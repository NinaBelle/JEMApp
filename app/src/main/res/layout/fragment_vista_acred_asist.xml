<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaAcredAsistFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Estado Acreditación:"
            android:textColor="#2A0D5E"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Sin acreditar a la Jornada"
            android:textColor="#B3122B"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fechyhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Fecha y Hora de Acreditación"
            android:textColor="#B3122B"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="* Las credenciales serán entregadas al finalizar las Jornadas"
            android:textColor="#B3122B"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Estado Certificados:"
            android:textColor="#2A0D5E"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvCertifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </ListView>

    </LinearLayout>
</FrameLayout>