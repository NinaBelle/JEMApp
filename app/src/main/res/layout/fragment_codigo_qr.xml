<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodigoQRFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Su código QR personal"
            android:textAlignment="center"
            android:textColor="#FA0A0C70"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Con éste código podrá Acreditarse y a través de éste su Asistencia será registrada"
            android:textAlignment="center"
            android:textColor="#FADF0B0B"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/codigoQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</FrameLayout>